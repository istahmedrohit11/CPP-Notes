#include <iostream>
using namespace std;

void sumcal(int n, int i, int &sum) {
    if (i > n)
        return;

    sum += i;
    sumcal(n, i + 1, sum);
}

int main() {
    int sum = 0;
    sumcal(5, 1, sum);
    cout << sum;
}

