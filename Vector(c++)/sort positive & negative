: Move all negative numbers to beginning and positive to end with constant extra space.



#include<bits/stdc++.h>
using namespace std;   
void sortNegPos(vector<int> &v){
    int n=v.size();
     int i=0;
     int j=n-1;
     while(i<j){
        if(v[i]<0) i++; 
        else if(v[j]>=0) j--;
        else{ //(v[i]<1 && v[j]>=0)
            swap(v[i],v[j]);
            i++;
            j--;
        }
     }
}
int main(){
    vector<int>v1={1,-2,3,-4,-5,6,8};   
    sortNegPos(v1);
    for(int i=0;i<v1.size();i++){
        cout<<v1[i]<<" "; 
    }
}  
