// Output (if n = 5):
// - - - - 1 
// - - - 1 2 1 
// - - 1 2 3 2 1 
// - 1 2 3 4 3 2 1 
// 1 2 3 4 5 4 3 2 1 









































#include<iostream>
using namespace std;
int main(){
  int i,j,n;
  cin>>n;
  for(i=0;i<n;i++){
    for(j=0;j<n-1-i;j++){
      cout<<"-"<<" ";
    }
    for(j=0;j<=i;j++){
     cout<<j+1<<" ";
    }
    for(j=i;j>0;j--){
      cout<<j<<" ";
    }
    cout<<endl;
  }
}
